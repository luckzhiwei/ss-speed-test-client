<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speed_test_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/speed_test_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@mipmap/background_blue">

        <TextView
            android:id="@+id/speed_test_title"
            style="@style/textViewMiddle.White"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/connection_progress" />

        <!--todo layout_abvoe 屬性失效-->
        <ProgressBar
            android:id="@+id/speed_test_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/speed_test_title"
            android:progressDrawable="@drawable/progress_background" />

        <com.vecent.ssspeedtest.view.KeyValueView
            android:id="@+id/item_total_server_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speed_test_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <com.vecent.ssspeedtest.view.KeyValueView
            android:id="@+id/item_total_server_count_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_total_server_count"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/speed_test_top_view"
        android:layout_height="wrap_content">
        <include layout="@layout/listview_common" />
    </LinearLayout>


</RelativeLayout>