<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorLightBlue">

        <TextView
            android:id="@+id/speed_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/connection_progress"
            android:textColor="@color/colorBlack" />

        <!--todo layout_abvoe 屬性失效-->
        <ProgressBar
            android:id="@+id/speed_test_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/speed_test_title" />

        <com.vecent.ssspeedtest.view.KeyValueView
            android:id="@+id/item_total_server_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speed_test_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <com.vecent.ssspeedtest.view.KeyValueView
            android:id="@+id/item_total_server_count_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_total_server_count"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />
    </RelativeLayout>

    <include layout="@layout/listview_common" />

</RelativeLayout>