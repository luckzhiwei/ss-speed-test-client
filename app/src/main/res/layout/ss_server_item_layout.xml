<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/texview_server_info"
                style="@style/textViewXLarge"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/edit" />

            <ImageView
                android:id="@+id/img_speed_test"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@id/img_edit"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@id/img_edit"
                android:src="@mipmap/triangle" />

            <TextView
                android:id="@+id/textview_ss_state"
                style="@style/textViewLarge"
                android:layout_alignLeft="@id/texview_server_info"
                android:layout_below="@id/texview_server_info"
                android:layout_marginTop="8dp"
                android:text="@string/state" />

            <TextView
                android:id="@+id/textview_ss_grade"
                style="@style/textViewLarge"
                android:layout_alignBottom="@id/textview_ss_state"
                android:layout_below="@id/texview_server_info"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/textview_ss_state"
                android:text="@string/grade" />

            <TextView
                android:id="@+id/textview_ss_score"
                style="@style/textViewLarge"
                android:layout_alignLeft="@id/img_speed_test"
                android:layout_below="@id/img_speed_test"
                android:layout_marginTop="24dp"
                android:text="@string/score" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>